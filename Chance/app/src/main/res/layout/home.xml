<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alignItems="baseline"
    app:flexDirection="column"
    app:justifyContent="space_between"
    android:background="@color/grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignItems="flex_start"
        app:flexDirection="column"
        app:justifyContent="flex_start"
        android:orientation="vertical"
        android:background="@color/grey"
        >
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexDirection="column"
            app:justifyContent="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/home_system_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, {{user}}!"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/administrator"
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/orange"
                android:text="Adminstration Tools"
                android:textColor="@color/black"
                />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignItems="center"
                app:flexDirection="row"
                app:justifyContent="space_evenly"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >

                <LinearLayout
                    android:id="@+id/button_registered"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/white"
                    android:clickable="true"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registered"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star_icon"
                        android:scaleType="fitCenter"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/button_event_created"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/white"
                    android:clickable="true"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created Events"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/created_events_icon"
                        android:scaleType="fitCenter"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_create_event"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/white"
                    android:clickable="true"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Event"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/create_events_icon"
                        android:scaleType="fitCenter"/>

                </LinearLayout>

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:alignContent="flex_start"
                android:orientation="horizontal">
                <!-- This is the search bar -->
                <EditText
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:hint="Find an event..."
                    android:background="@color/white"
                    />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:flexDirection="row"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:background="@color/black"
                    app:layout_flexGrow="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_gravity="top"
                        android:src="@drawable/placeholder_banner"
                        android:scaleType="centerCrop" />
                </FrameLayout>

            </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap"
                    app:flexDirection="row"
                    android:layout_marginTop="10dp"
                    app:justifyContent="space_evenly"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="200dp"
                        android:layout_height="250dp"
                        android:background="@color/black"
                        app:layout_flexGrow="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_gravity="top"
                            android:src="@drawable/placeholder_banner"
                            android:scaleType="centerCrop" />
                    </FrameLayout>

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:flexDirection="row"
                android:layout_marginTop="10dp"
                app:justifyContent="space_evenly"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:background="@color/black"
                    app:layout_flexGrow="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_gravity="top"
                        android:src="@drawable/placeholder_banner"
                        android:scaleType="centerCrop" />
                </FrameLayout>

            </com.google.android.flexbox.FlexboxLayout>

        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>

    </ScrollView>

</com.google.android.flexbox.FlexboxLayout>