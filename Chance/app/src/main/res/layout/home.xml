<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    app:alignItems="baseline"
    app:flexDirection="column"
    app:justifyContent="flex_start"
    android:paddingHorizontal="@dimen/chance_horizontal_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:orientation="vertical"
            app:alignItems="flex_start"
            app:flexDirection="column"
            app:justifyContent="flex_start">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/home_event_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:alignItems="center"
                app:flexDirection="column"
                app:justifyContent="center">

                <TextView
                    android:id="@+id/home_system_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, {{user}}!"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_text_size" />

                <Button
                    android:id="@+id/administrator"
                    android:visibility="gone"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/orange"
                    android:text="Adminstration Tools"
                    android:textColor="@color/black" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:justifyContent="space_evenly">

                    <LinearLayout
                        android:id="@+id/button_registered"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registered"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/star_icon" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/button_event_created"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Created Events"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/created_events_icon" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_create_event"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create Event"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/create_events_icon" />

                    </LinearLayout>

                </com.google.android.flexbox.FlexboxLayout>
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexDirection="row"
                    android:layout_marginVertical="10dp"
                    app:alignItems="center">
                    <com.example.chance.customviews.ChanceTextInput
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:icon="@drawable/search_icon"
                        app:hint="Find an event..."
                        app:iconDimensions="30"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/filter_icon"
                        app:layout_flexShrink="0"
                        android:layout_marginHorizontal="10dp"
                        />
                </com.google.android.flexbox.FlexboxLayout>

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:flexDirection="row">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/events_container_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_flexShrink="1">
                </androidx.recyclerview.widget.RecyclerView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/events_container_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_flexShrink="1">
                </androidx.recyclerview.widget.RecyclerView>

            </com.google.android.flexbox.FlexboxLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </com.google.android.flexbox.FlexboxLayout>
    </ScrollView>




</com.google.android.flexbox.FlexboxLayout>