<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alignItems="flex_start"
    app:flexDirection="column"
    app:justifyContent="flex_start"
    android:orientation="vertical"
    android:background="@color/grey">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignItems="center"
        app:flexDirection="column"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_flexGrow="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adminstration Tools"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/browse_profiles_button"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:text="Browse Profiles"
            android:backgroundTint="@color/orange"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/browse_events_button"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:text="Browse Events/ Banners"
            android:backgroundTint="@color/orange"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/browse_photos"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:text="Browse Photos"
            android:backgroundTint="@color/orange"
            android:textColor="@color/black"
            />

        </com.google.android.flexbox.FlexboxLayout>
</com.google.android.flexbox.FlexboxLayout>
