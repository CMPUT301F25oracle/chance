<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alignItems="flex_start"
    app:flexDirection="column"
    app:justifyContent="flex_start"
    android:orientation="vertical"
    android:background="@color/grey">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignItems="center"
        app:flexDirection="column"
        app:justifyContent="center"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        app:layout_flexShrink="0">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:drawable/sym_def_app_icon"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            android:contentDescription="Avatar"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:textSize="@dimen/common_text_size"

            android:text="Profile Information"
            />
        </com.google.android.flexbox.FlexboxLayout>


        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="column"
            app:justifyContent="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name:"
                android:textSize="@dimen/sub_sub_title_text_size"
                >

            </TextView>

            <EditText
                android:id="@+id/username_input"
                android:layout_marginTop="5dp"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:hint="Your Username"
                android:background="@color/white"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name:"
                android:textSize="@dimen/sub_sub_title_text_size"
                >

            </TextView>

            <EditText
                android:id="@+id/fullname_input"
                android:layout_marginTop="5dp"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:hint="Lorem lpsum"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="@dimen/sub_sub_title_text_size"
                >

            </TextView>

            <EditText
                android:id="@+id/email_input"
                android:layout_marginTop="5dp"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:hint="username@email.com"
                android:background="@color/white"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number:"
                android:textSize="@dimen/sub_sub_title_text_size"
                >

            </TextView>

            <EditText
                android:id="@+id/phone_input"
                android:layout_marginTop="5dp"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:hint="123-456-7890"
                android:background="@color/white"/>

        </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="column"
        app:justifyContent="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_marginLeft="27dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/orange"
            android:text="View Notification History"
            android:textColor="@color/white"
            />

        <Button
            android:layout_marginLeft="27dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/orange"
            android:text="Disable Account"
            android:textColor="@color/white"
            />

        <Button
            android:layout_marginLeft="27dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/button_blue"
            android:text="Disable Notification"
            android:textColor="@color/white"
            />

        <Button
            android:layout_marginLeft="27dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/button_blue"
            android:text="Disable Notification"
            android:textColor="@color/white"
            />

    </com.google.android.flexbox.FlexboxLayout>

</com.google.android.flexbox.FlexboxLayout>






