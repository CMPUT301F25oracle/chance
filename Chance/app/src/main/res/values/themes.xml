<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chance" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="textAppearanceButton">@style/NoCapsButton</item>
    </style>


    <style name="NoCapsButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="textAllCaps">false</item>
    </style>

    <!-- Launch (cold-start) splash theme -->
    <style name="Theme.Chance.Launcher" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Make the window background the blue drawable so the system shows it immediately -->
        <!-- Prevent white flash during theme transition -->
        <item name="android:windowDisablePreview">true</item>
    </style>
</resources>