<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chance" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="textAppearanceButton">@style/NoCapsButton</item>
    </style>


    <style name="NoCapsButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="textAllCaps">false</item>
    </style>

    <!-- cold-start splash screen -->
    <style name="Theme.Chance.Launcher" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="textAppearanceButton">@style/NoCapsButton</item>
    </style>
</resources>